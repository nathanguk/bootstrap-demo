{
	"AWSTemplateFormatVersion": "2010-09-09",

	"Description": "Windows EC2 Instance in London eu-west2",
	
	"Parameters": {
        "VPC": {
			"Description": "VPC to Deploy Collectors",
			"Type" : "AWS::EC2::VPC::Id"
        },
		"SubnetA": {
			"Description": "Subnet for first Availabilty Zone in Region",
			"Type" : "AWS::EC2::Subnet::Id"
        },
        "InstanceKey": {
			"Description": "EC2 Instance Key Pair for Collector Instances",
            "Type" : "AWS::EC2::KeyPair::KeyName"
        },
        "InstanceType": {
			"Description": "Instance Type for Collector Instances",
            "Type" : "String",
            "Default" : "t2.small",
            "AllowedValues" : ["t2.small", "t2.medium", "t2.xlarge"]
        },
        "InstanceAMI": {
            "Description": "Instance AMI",
            "Type" : "String",
            "Default" : "ami-9c6b8dfb"
        },
        "Parameter1": {
			"Description": "Parameter1",
            "Type" : "String"
        },
        "Parameter2": {
			"Description": "Parameter1",
            "Type" : "String",
            "Default" : "ami-403e2524"
        }
	},

	
	"Resources": {
		"ProdSG": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"Tags": [{
						"Key": "Name",
						"Value": "Prod_SG"
					}
				],
				"GroupDescription": "Security Group",
				"VpcId": {
					"Ref": "VPC"
				}
			}
		},
		"ProdSGRule1": {
			"Type": "AWS::EC2::SecurityGroupIngress",
			"DependsOn": "ProdSG",
			"Properties": {
				"GroupId": { "Ref" : "ProdSG" },
				"IpProtocol": "-1",
				"FromPort": "-1",
				"ToPort": "-1",
				"SourceSecurityGroupId": { "Ref" : "ProdSG" }
			}
        },

        "Windows1" : {
            "Type" : "AWS::EC2::Instance",
            "Properties" : {
               "AvailabilityZone" : { 
                   "Fn::Select": ["0", {
                       "Fn::GetAZs": {
                           "Ref": "AWS::Region"
                           }
                        }
                    ]},  
               "ImageId" : { "Ref" : "ImageID" },
               "InstanceInitiatedShutdownBehavior" : "stop",
               "InstanceType" : { "Ref" : "InstanceType" },
               "KeyName" : { "Ref" : "InstanceKey" },
               "Monitoring" : "false",
               "NetworkInterfaces" : [{
                    "AssociatePublicIpAddress" : "True",
                    "DeleteOnTermination" : "True",
                    "SubnetId" : { "Ref" : "SubnetA" },
                    "GroupSet": [{"Fn::GetAtt" : ["ProdSG", "GroupId"]}],
                    "DeviceIndex" : "0"
                }],
               "Tags": [
                {
                    "Key": "Name",
                    "Value": "Windows"
                },
                {
                    "Key": "Application Name",
                    "Value": "Test Application"
                },
                {
                    "Key" : "Criticality",
                    "Value" : "Tier 2"
                },
                {
                    "Key" : "Environment",
                    "Value" : "Prod"
                },
                {
                    "Key" : "Owner",
                    "Value" : "ANS"
                }],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "", [
                                "#!/bin/bash \n",
                                "yum update -y \n",
                                "yum search python35 \n",
                                "yum install python35-virtualenv -y \n",
                                "yum install python-pip -y \n",
                                "alternatives --set python /usr/bin/python3.5 \n",
                                "pip install requests \n",
                                "wget https://raw.githubusercontent.com/ans-cloud/aws/master/LogicMonitor-Collector-PublicIP/CreateLMCollector.py \n",
                                "python CreateLMCollector.py '",{"Ref": "accessId"},"' '",{"Ref": "accessKey"},"' '",{"Ref": "collectorSize"},"' '",{"Ref": "lmHost"},"' '",{"Ref": "SostenutoId"},"'"
                            ]
                        ]
                    }
                }
            }
        }
    }
}